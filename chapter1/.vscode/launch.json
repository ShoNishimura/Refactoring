    "version": "0.2.0",
    "configurations": [
        {

            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Current Page",
            "request": "launch",
            "type": "chrome",
            "file": "${file}"
        },

        {
            "name": "Launch local file",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "file": "${workspaceRoot}/index.html"
        },

    ]
}